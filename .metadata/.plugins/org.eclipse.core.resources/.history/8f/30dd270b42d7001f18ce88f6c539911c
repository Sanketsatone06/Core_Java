package day_11;

import java.util.Scanner;

public class Classwork_p4 {
    
    private String name;
    private int age;
    private String country;
    
    // Setter and Getter for name
    public void setName(String name) {
        this.name = name;
    }
    
    public String getName() {
        return name;
    }
    
    // Setter and Getter for age
    public void setAge(int age) {
        this.age = age;
    }
    
    public int getAge() {
        return age;
    }
    
    // Setter and Getter for country
    public void setCountry(String country) {
        this.country = country;
    }
    
    public String getCountry() {
        return country;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Prompting user for input
        System.out.println("Enter name:");
        String name = sc.nextLine();

        System.out.println("Enter age:");
        int age = sc.nextInt();
        sc.nextLine(); // Consume the newline character left by nextInt()

        System.out.println("Enter country:");
        String country = sc.nextLine();

        // Creating a single object of Classwork_p4
        Classwork_p4 obj = new Classwork_p4();
        obj.setName(name);
        obj.setAge(age);
        obj.setCountry(country);

        // Displaying the values using getter methods
        System.out.println("\nPerson Details:");
        System.out.println("Name: " + obj.getName());
        System.out.println("Age: " + obj.getAge());
        System.out.println("Country: " + obj.getCountry());

        sc.close(); // Closing the scanner
    }
}
